{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true
    },
    "tasks": [
        {
            "label": "Run AOC",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "cargo aoc",
            "problemMatcher": [],
        },
        {
            "label": "Benchmark AOC",
            "type": "shell",
            "command": "cargo aoc bench",
            "problemMatcher": [],
        },
        {
            "label": "Download input",
            "type": "shell",
            "command": "cargo aoc input -d ${input:day} -y ${config:year}",
            "problemMatcher": [],
        },
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Which day of AOC 2015?"
        }
    ]
}
